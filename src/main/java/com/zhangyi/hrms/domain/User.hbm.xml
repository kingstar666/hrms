<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.zhangyi.hrms.domain.User" table="sys_user" schema="hrms">
        <id name="id">
            <column name="id" sql-type="varchar(32)" length="32"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(32)" length="32"/>
        </property>
    </class>
</hibernate-mapping>